<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SettlersTheme" parent="Theme.AppCompat">
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColorTertiary">#77ffffff</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="InGameTheme" parent="SettlersTheme">
    </style>

    <style name="CardTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/primaryDark</item>
    </style>

    <style name="ReadySwitch">
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorSwitchThumbNormal">@color/accent</item>
        <item name="android:colorForeground">@color/accent</item>
    </style>
</resources>